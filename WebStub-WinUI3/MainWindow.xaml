<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WebStub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WebStub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Title="WebStub"
    Closed="Window_Closed"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Page x:Name="Root">

        <Page.Resources>
            <x:Double x:Key="SettingsCardWrapThreshold">320</x:Double>
        </Page.Resources>

        <Grid Padding="4" RowSpacing="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="WebStub" />

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        x:Name="LeftContextLength"
                        Width="420"
                        MinWidth="320"
                        MaxWidth="720" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Padding="12,0" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Spacing="4">
                        <c:SettingsCard Header="Port">
                            <NumberBox
                                IsEnabled="{x:Bind ViewModel.NotBusy, Mode=OneWay}"
                                Minimum="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{x:Bind ViewModel.Port, Mode=TwoWay}" />
                        </c:SettingsCard>
                        <c:SettingsCard Header="File">
                            <TextBox Width="280" Text="{x:Bind ViewModel.FilePath, Mode=TwoWay}" />
                        </c:SettingsCard>
                        <c:SettingsCard Header="Server">
                            <ToggleSwitch
                                IsOn="{x:Bind ViewModel.Running, Mode=TwoWay}"
                                OffContent="OFF"
                                OnContent="ON" />
                        </c:SettingsCard>
                    </StackPanel>

                    <Grid Grid.Row="1" RowSpacing="4">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="32" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock VerticalAlignment="Center" Text="Log" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button Command="{x:Bind ViewModel.ClearLogCommand}">
                                    <SymbolIcon Symbol="Delete" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <TextBox
                            Grid.Row="1"
                            AcceptsReturn="True"
                            IsReadOnly="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="{x:Bind ViewModel.LogText, Mode=OneWay}" />
                    </Grid>
                </Grid>

                <c:GridSplitter
                    Grid.Column="1"
                    Width="16"
                    HorizontalAlignment="Left"
                    DoubleTapped="GridSplitter_DoubleTapped"
                    ResizeBehavior="BasedOnAlignment"
                    ResizeDirection="Auto">
                    <c:GridSplitter.RenderTransform>
                        <TranslateTransform X="-7" />
                    </c:GridSplitter.RenderTransform>
                </c:GridSplitter>

                <Grid
                    Grid.Column="1"
                    Padding="12,0"
                    RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Command="{x:Bind ViewModel.RefreshCommand}">
                            <SymbolIcon Symbol="Refresh" />
                        </Button>
                    </StackPanel>

                    <local:EditorWebView
                        x:Name="JavaScriptWebView"
                        Grid.Row="1"
                        Text="{x:Bind ViewModel.JavaScript, Mode=TwoWay}" />

                </Grid>
            </Grid>
        </Grid>
    </Page>

</Window>
