<Window
    x:Class="WebStub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WebStub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="WebStub"
    Width="1200"
    Height="720"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
    Background="{DynamicResource MicaBackgroundFillColorBaseBrush}"
    Closing="Window_Closing"
    Foreground="#F0F0F0"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="{x:Type GridSplitter}">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LayerFillColorAltBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="4">

        <Grid.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="Height" Value="64" />
                <Setter Property="Padding" Value="12" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            </Style>
            <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="{x:Type ToggleButton}">
                <Setter Property="Width" Value="72" />
                <Setter Property="Content" Value="OFF" />
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Content" Value="ON" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftContentGridColumn" Width="400" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="4,4,0,4">

            <Grid.RowDefinitions>
                <RowDefinition Height="72" />
                <RowDefinition Height="72" />
                <RowDefinition Height="72" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Port" />
                    <TextBox
                        Grid.Column="1"
                        Width="160"
                        Height="32"
                        HorizontalAlignment="Right"
                        IsEnabled="{Binding NotBusy}"
                        Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>

            <Border Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="FilePath" />
                    <TextBox
                        Grid.Column="1"
                        Width="280"
                        Height="32"
                        HorizontalAlignment="Right"
                        Text="{Binding FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>

            <Border Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Server" />
                    <ToggleButton
                        x:Name="ServerRunningButton"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding Running}" />
                </Grid>
            </Border>

            <Grid Grid.Row="3">

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="64" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Log" />
                    <Button
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Command="{Binding ClearLogCommand}">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE74D;" />
                    </Button>
                </Grid>

                <TextBox
                    x:Name="LogTextBox"
                    Grid.Row="1"
                    AcceptsReturn="True"
                    HorizontalScrollBarVisibility="Visible"
                    IsReadOnly="True"
                    Text="{Binding LogText}"
                    TextWrapping="NoWrap"
                    VerticalScrollBarVisibility="Visible" />
            </Grid>

        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="8"
            HorizontalAlignment="Stretch"
            MouseDoubleClick="GridSplitter_MouseDoubleClick" />

        <Grid Grid.Column="2" Margin="0,4,4,4">

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button HorizontalAlignment="Right" Command="{Binding RefreshCommand}">
                <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE72C;" />
            </Button>

            <local:EditorWebView
                x:Name="JavaScriptWebView"
                Grid.Row="1"
                Text="{Binding JavaScript, Mode=TwoWay}" />

        </Grid>
    </Grid>
</Window>